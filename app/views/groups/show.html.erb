<p id="notice"><%= notice %></p>
<p>
  <b>Name:</b>
  <%= @group.groupName %>
</p>

<p>
  <b>Desc:</b>
  <%= @group.desc %>
</p>

<h2>Users:</h2>
<table>
<tr>
    <th>name</th>
    <th>age</th>
    <th>content</th>
</tr>
<% @group.users.each do |user| %>
<tr>
    <td><%= user.name %></td>
    <td><%= user.age %></td>
    <td><%= user.content %></td>
</tr>   
<% end %> 
</table>


<h2>Add a user:</h2>
<%= form_for([@group,@group.users.build]) do |f| %>
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :age %><br />
	<%= f.text_field :age %>
</div>
<div class="field">
	<%= f.label :content %><br />
	<%= f.text_area :content %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
